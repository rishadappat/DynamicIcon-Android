<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appat.dynamicicons">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_red"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_red"
        android:supportsRtl="true"
        android:theme="@style/Theme.DynamicIcons">
        <activity android:name=".MainActivity"
            android:label="Dynamic Launcher Icon Chooser">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity-alias
            android:name="RedLauncherAlias"
            android:enabled="true"
            android:icon="@drawable/ic_red"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name="PurpleLauncherAlias"
            android:enabled="false"
            android:icon="@drawable/ic_purple"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.MONKEY" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name="GreenLauncherAlias"
            android:enabled="false"
            android:icon="@drawable/ic_green"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.MONKEY" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name="OrangeLauncherAlias"
            android:enabled="false"
            android:icon="@drawable/ic_orange"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.MONKEY" />
            </intent-filter>
        </activity-alias>
    </application>

</manifest>